<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wyu.mapper.empMapper">
<!-- 添加员工信息   -->
    <insert id="addEmp" parameterType="map">
        insert into emp(ename,epassword,esex,eage,ebirthday,eaddress,ephone,esalary,email)
        values(#{ename},#{epassword},#{esex},#{eage},#{ebirthday},#{eaddress},#{ephone},#{esalary},#{email})
    </insert>

<!--删除员工信息-->
    <delete id="deleteEmp" parameterType="map">
    delete from emp where ename=#{ename}
    </delete>
<!--  修改员工信息 1.姓名修改全部信息 2.姓名修改密码 -->
    <update id="editEmp" parameterType="map">
        update emp set ename=#{ename},eage=#{eage}, epassword=#{epassword},esex=#{esex},ebirthday=#{ebirthday},
            eaddress=#{eaddress},ephone=#{ephone},esalary=#{esalary},email=#{email}
            where ename=#{ename}
    </update>
    <update id="editEmpPsd" parameterType="map">
        update  emp set epassword=#{epassword} where ename=#{ename}
    </update>
<!--  查询员工信息 1.根据姓名查找 2.查找全部的员工信息 -->
    <select id="queryEmpByName" parameterType="map" resultType="map">
        select * from emp where ename=#{ename} and epassword = #{epassword}
    </select>
    <select id="queryEmpList" parameterType="map" resultType="emp">
        select * from emp
        <where>
            <if test="ename != null and ename !=''">
                ename like concat("%",#{ename},"%")
            </if>
        </where>
    </select>
</mapper>